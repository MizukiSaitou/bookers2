<h1>User info</h1>

<h3>名前</h3>
<%= form_with model:@user, local:true do |f| %>
<label for = "userName">名前</label>
<%= f.text_field :name, autofocus: true, id:"userName" %>

<%= attachment_field :profile_image %>



<label for = "userText">自己紹介</label>
<%= f.text_area :introduction, autofocus: true, id:"userText" %>

<%= f.submit"Update User" %>

