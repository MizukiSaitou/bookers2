<h1>Book detail</h1>

  <table>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag(@user, :profile_image_id, :fill, 40, 40, format:'jpeg', fallback:'no_image.jpg') %>
          <br><%= @user.name %>
        <% end %>
      </td>
      <td><%= link_to book_path do %><%= @book.title %><% end %></td>
      <td><%= @book.body %></td>
      <td><%= link_to"Edit", edit_book_path(@book) %></td>
      <td><%= link_to"Delete", book_path(@book), method: :delete %></td>
    </tr>
  </table>
