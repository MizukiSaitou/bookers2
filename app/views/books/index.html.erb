<h1>Books</h1>

  <table>
    <tr>
      <th></th>
      <th>本のタイトル</th>
      <th>感想</th>
    </tr>
    
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag(@user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:'no_image.jpg') %></td>
      <td>
        <%= link_to book_path(book) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>

